<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns     = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.apn.developer.joboffer"
        version   = "2.0.0">
    <name>demoJob</name>

    <description>
       NEWSPAPER FOR JOBS IN TAMILNADU AND PUDUCHERRY ON EVERY SATURDAY'S
    </description>

    <author href="http://phonegap.com" email="support@phonegap.com">
        JobOffer
    </author>

    <gap:plugin name="com.jamiestarke.webviewdebug" version="1.0.8" />
    <gap:plugin name="org.li8.inappbrowser" version="0.1" />
    <gap:plugin name="org.apache.cordova.network-information" version="0.2.12" />
    <gap:plugin name="com.chanthu.evri.gcs-file-transfer" version="1.0.0" />
	<gap:plugin name="io.github.pwlin.cordova.plugins.fileopener2" version="1.0.11" />
    <gap:plugin name="org.apache.cordova.file" version="1.3.1" />
	<gap:plugin name="net.tunts.webintent" version="0.2.1" />
	<gap:plugin name="com.kernix.pdfviewer" version="1.1.0" />

    <feature name="http://api.phonegap.com/1.0/device" />
    <feature name="debug-server" required="true">
       <param name="domain" value="http://debug.phonegap.com"/>
       <param name="key" value="willoughby"/>
    </feature>
     <access origin="*"/>
	 
	<preference name="SplashScreen" value="splash" />
    <preference name="SplashScreenDelay" value="3000" /> 
    <preference name="phonegap-version" value="3.6.3" />
    <preference name="orientation"      value="default" />
    <preference name="target-device"    value="universal" />
    <preference name="fullscreen"       value="false" />
    <preference name="webviewbounce"    value="false" />

    <icon src="img/lo_icon.png" />
    

    <gap:splash src="img/screen/screen-ldpi-portrait.png"  gap:platform="android" gap:density="ldpi" />
    <gap:splash src="img/screen/screen-mdpi-portrait.png"  gap:platform="android" gap:density="mdpi" />
    <gap:splash src="img/screen/screen-hdpi-portrait.png"  gap:platform="android" gap:density="hdpi" />
    <gap:splash src="img/screen/screen-xhdpi-portrait.png" gap:platform="android" gap:density="xhdpi" />

    

    <!-- content src="http://www.w3.org/2010/05/video/mediaevents.html" / -->
</widget>
